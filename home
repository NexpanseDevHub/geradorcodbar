        <!-- Campo de entrada -->
        <label for="input-text" style="color:#313233; font-weight:600;">Insira o Texto</label>
        <input type="text" id="input-text" placeholder="Digite algo..." oninput="generateBarcode()">

        <!-- Container do código de barras -->
        <div class="barcode-container">
            <svg id="barcode"></svg>
        </div>

        <!-- Checkbox para mostrar número -->
        <div class="checkbox-container">
            <input type="checkbox" id="show-number" onclick="generateBarcode()">
            <label for="show-number" style="color:#313233;">Mostrar Número</label>
        </div>

        <!-- Botão de WhatsApp -->
        <div class="whatsapp-btn">
            <a href="https://wa.me/5541987206591?text=Olá,%20quero%20criar%20meu%20próprio%20sistema" target="_blank">
