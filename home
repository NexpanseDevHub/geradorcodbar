    <script>
        function generateBarcode() {
            let text = document.getElementById("input-text").value;
            let showNumber = document.getElementById("show-number").checked;
            let barcodeElement = document.getElementById("barcode");

            // Define o código padrão "Bem-vindo" se o input estiver vazio
            if (text.trim() === "") {
                text = "Bem-vindo";
            }

            JsBarcode(barcodeElement, text, {
                format: "CODE128",
                displayValue: showNumber,
                background: "transparent",
                lineColor: "#000",
                fontSize: 14,
                width: 2,
                height: 60
            });
        }

        // Gera o código "Bem-vindo" ao carregar a página
        window.onload = generateBarcode;
    </script>

